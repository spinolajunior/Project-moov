<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo_principal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageButton
                android:id="@+id/btn_voltar"
                android:background="@color/transparente"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/button_back" />

            <TextView
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gerenciamento"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/cinza_texto"
                android:textSize="20sp" />

            <Space
                android:layout_width="28dp"
                android:layout_height="28dp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_backgroud_config"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informações da Corrida"
                android:textColor="@color/cinza_texto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Origem -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Origem:"
                    android:textColor="@color/cinza_texto"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/txt_origem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/cinza_texto"/>
            </LinearLayout>

            <!-- Destino -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destino:"
                    android:textColor="@color/cinza_texto"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/txt_destino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/cinza_texto"/>
            </LinearLayout>

            <!-- Valor por vaga -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor por vaga:"
                    android:textColor="@color/cinza_texto"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/txt_valor_vaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/cinza_texto"/>
            </LinearLayout>

            <!-- Vagas disponíveis -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vagas disponíveis:"
                    android:textColor="@color/cinza_texto"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/txt_vagas_disponiveis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/cinza_texto"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrição:"
                    android:textColor="@color/cinza_texto"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/txt_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cinza_texto"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:id="@+id/rv_corridas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_finalizar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="Finalizar"
                    android:textColor="@color/cinza_texto"
                    android:textStyle="bold"
                    android:backgroundTint="#76FF03"
                    android:layout_marginEnd="8dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_excluir"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="Cancelar"
                    android:textStyle="bold"
                    android:textColor="@color/cinza_texto"
                    android:backgroundTint="#E53935"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>