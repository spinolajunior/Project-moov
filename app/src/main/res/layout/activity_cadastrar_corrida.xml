<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo_principal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageButton
                android:id="@+id/btn_voltar"
                android:background="@color/transparente"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/button_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cadastrar Corrida"
                android:textAlignment="center"
                android:textColor="@color/cinza_texto"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="28dp"
                android:layout_height="28dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_backgroud_config"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/etOrigin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Origem"
                    android:padding="7dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/shape_input_text_login"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/etDestination"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Destino"
                    android:padding="7dp"
                    android:background="@drawable/shape_input_text_login"
                    android:inputType="textCapWords"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etVacancies"
                        android:background="@drawable/shape_input_text_login"

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Vagas"
                        android:padding="7dp"
                        android:inputType="number"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:background="@drawable/shape_input_text_login"
                        android:padding="7dp"
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Preço por vaga"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_data_corrida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_input_text_login"
                    android:hint="2025-08-24T19:30:00Z"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"  android:textSize="16sp"       android:background="@drawable/shape_input_text_login"
                    android:hint="Descrição"
                    android:inputType="textMultiLine"  android:gravity="left|center_horizontal" android:padding="10dp"
                    android:scrollbars="vertical"  android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btn_validar"
                    android:layout_width="0dp"
                    android:textColor="@color/cinza_texto"
                    android:textStyle="bold"
                    android:backgroundTint="@color/amarelo_principal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Validar"/>

                <Button
                    android:id="@+id/btnConfirmTrip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_desativado"
                    android:textColor="@color/cinza_texto"
                    android:textStyle="bold"
                    android:text="Criar Viagem"/>
            </LinearLayout>



            <com.here.sdk.mapview.MapView
                android:id="@+id/map_view_cadastro_viagem"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />





        </LinearLayout>
    </LinearLayout>
</LinearLayout>